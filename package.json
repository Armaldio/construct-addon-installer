{
  "name": "installer",
  "version": "0.0.3",
  "author": "Quentin Goinaud <armaldio@gmail.com>",
  "description": "Install and manage your C2 addons",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "devOptions": "node .electron-vue/dev-runner.js",
    "devInstaller": "cross-env TEST_ADDON=true node .electron-vue/dev-runner.js",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "postinstall": "",
    "webext": "npm-run-all webext:*",
    "webext:chrome": "shipit chrome BrowserExtension",
    "webext:firefox": "shipit firefox BrowserExtension",
    "webext:opera": "shipit opera BrowserExtension"
  },
  "build": {
    "productName": "C2 Addon Installer",
    "appId": "com.armaldio.addoninstaller",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "publish": "github"
    },
    "linux": {
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "forceCodeSigning": false,
    "fileAssociations": {
      "ext": "c2addon",
      "name": "Construct 2 Addons",
      "description": "Open and install .c2addon files",
      "icon": "icons/icon.ico"
    },
    "protocols": {
      "name": "Addon Installer",
      "schemes": [
        "addoninstaller"
      ]
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "cheerio": "^1.0.0-rc.2",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^1.3.0",
    "electron-updater": "^2.20.1",
    "jszip": "^3.1.5",
    "mkdirp": "^0.5.1",
    "node-notifier": "^5.2.1",
    "opn": "^5.2.0",
    "os-locale": "^2.1.0",
    "raven": "^2.4.2",
    "request": "^2.83.0",
    "request-progress": "^3.0.0",
    "request-promise": "^4.2.2",
    "uuid": "^3.2.1",
    "vue": "^2.3.3",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^7.4.2",
    "vue-router": "^2.5.3",
    "vuetify": "^1.0.3",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "@wext/shipit": "^0.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.1.3",
    "chalk": "^2.1.0",
    "chrome-webstore-upload": "^0.2.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "npm-run-all": "^4.1.2",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^13.0.5",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.2",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
